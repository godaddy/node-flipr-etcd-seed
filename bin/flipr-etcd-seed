#!/usr/bin/env node

'use strict';

var path = require('path');
var program = require('commander');
var seed = require(path.resolve(__dirname, '../flipr-etcd-seed'));

//Default options handled in ./lib/config
program
  .version(require('../package.json').version)
  .option('-c, --config-path <path>', 'REQUIRED - Path to directory containing config files')
  .option('-d, --directory <name>', 'RECOMMENDED - The etcd directory to save the config under.  Usually the name of your application.  Alphanumeric only, no whitespace. Default is "default"')
  .option('-h, --host <name>', 'RECOMMENDED - The ip/domain/hostname of your etcd server.  Default is "127.0.0.1".')    
  .option('-e, --environment <name>', 'RECOMMENDED - The environment you are targetting.  Should match a directory under your config-path.  Default is "default"')
  .option('-k, --key <name>', 'The etcd key to save the config under.  Typically the environment you are targetting. Alphanumeric only, no whitespace. Default is "config"')
  .option('-p, --port <int>', 'The port your etcd server is listening on.  Default is 4001.')
  .option('-f, --format <type>', 'Config file format.  Accepts "json" or "yaml".  Defaults to "yaml".')
  .parse(process.argv);

seed(program, function(err){
  if(err)
    process.exit(1);
  process.exit(0);
});